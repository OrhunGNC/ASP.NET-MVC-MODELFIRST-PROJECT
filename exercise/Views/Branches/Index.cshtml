@model IEnumerable<exercise.Models.Branch>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Branches Table</h2>
@Html.ActionLink("Create", "Create", null, new {@class="btn btn-success"})
@Html.ActionLink("Search", "Search", null, new {@class="btn btn-info"})
<br />
<br />
<table class="table table-dark">
    <thead>
        <tr>
            <th>Branch ID</th>
            <th>Branch Adress</th>
            <th>Branch Book Count</th>
            <th>Branch Personel Count</th>
            <th>Properties</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.branchID</td>
                <td>@item.branchAdress</td>
                <td>@item.branchBookCount</td>
                <td>@item.branchPersonelCount</td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { @id = item.branchID }, new { @class = "btn btn-primary" })
                    @Html.ActionLink("Delete", "Delete", new { @id = item.branchID }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>

