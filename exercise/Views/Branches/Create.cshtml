@model exercise.Models.Branch
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Create a New Branch</h2>
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(x => x.branchAdress, "Branch Adress")
            <br />
            <div class="col-md-4">
                @Html.EditorFor(x => x.branchAdress, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.branchBookCount, "Branch Book Count")
            <br />
            <div class="col-md-4">
                @Html.EditorFor(x => x.branchBookCount, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.branchPersonelCount, "Branch Personel Count")
            <br />
            <div class="col-md-4">
                @Html.EditorFor(x => x.branchPersonelCount, new { @class = "form-control" })
            </div>
        </div>
        <br />
        <input type="submit" class="btn btn-success" value="Create" />
        @Html.ActionLink("Back To List", "Index", null, new { @class = "btn btn-secondary" })
    </div>
}


