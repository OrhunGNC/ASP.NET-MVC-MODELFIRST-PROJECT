@model exercise.Models.Admin 
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <script src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container" style="margin-left:700px;margin-top:300px;">
        <h2>Please Login First</h2>

        @using (Html.BeginForm("Login", "Home"))
        {
            @ViewBag.hata
    <div class="form-group">
        <div class="col-md-4">
            @Html.LabelFor(x => x.Username, "Username")
            @Html.TextBoxFor(x => x.Username, new { @class = "form-control" })
        </div>
        
    </div>
            <div class="form-group">
                <div class="col-md-4">
                    @Html.LabelFor(x => x.Password, "Password")
                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
                </div>

            </div>
            <br />
            <input type="submit" class="btn btn-primary" value="Login" />
        }


    </div>
</body>
</html>
