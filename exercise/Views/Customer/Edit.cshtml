@model exercise.Models.Customer
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Edit Customer</h2>
@using (Html.BeginForm())
            {
    @Html.HiddenFor(x=>x.customerID)
                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.LabelFor(x => x.customerName, "Customer Name")
                        <br />
                        <div class="col-md-4">
                            @Html.TextAreaFor(x => x.customerName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.customerName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.customerAge, "Customer Age")
                        <br />
                        <div class="col-md-4">
                            @Html.TextAreaFor(x => x.customerAge, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.customerAge, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.customerAdress, "Customer Adress")
                        <br />
                        <div class="col-md-4">
                            @Html.TextAreaFor(x => x.customerAdress, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => x.customerAdress, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.bookID, "Book Name")
                        <br />
                        <div class="col-md-4">
                            @Html.DropDownListFor(x => x.bookID, (List<SelectListItem>)ViewBag.veri)
                            @Html.ValidationMessageFor(x => x.bookID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(x => x.branchID, "Branch Adress")
                        <br />
                        <div class="col-md-4">
                            @Html.DropDownListFor(x => x.branchID, (List<SelectListItem>)ViewBag.veri2)
                            @Html.ValidationMessageFor(x => x.branchID, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <br />
                    <input type="submit" class="btn btn-success" value="Update" />
                    @Html.ActionLink("Back to List", "Index", null, new {@class="btn btn-secondary"})
                </div>
            }

